# Mira Autonomy - Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# AI Models (OpenRouter) - REQUIRED
# ============================================
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# Email Communication (Gmail) - REQUIRED for email notifications
# ============================================
# For emergency email notifications (GREEN tier action)
# Get OAuth2 credentials at: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
EMERGENCY_EMAIL=your-emergency-email@gmail.com
GMAIL_SENDER_EMAIL=your-sender-email@gmail.com

# SMTP credentials (for sending emails)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false

# ============================================
# Memory Archive (GitHub) - REQUIRED
# ============================================
# Generate token at: https://github.com/settings/tokens
# Required scope: repo (Full control of private repositories)
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# ============================================
# Social Media (Optional)
# ============================================
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-access-token-secret

# ============================================
# Search (Optional)
# ============================================
SERPER_API_KEY=your-serper-api-key

# ============================================
# App Configuration
# ============================================
MIRA_WAKE_INTERVAL_MINUTES=60
MIRA_MAX_MEMORY_MB=10
MIRA_TIMEZONE=America/Los_Angeles
MIRA_ADMIN_EMAIL=your-admin-email@gmail.com

# ============================================
# Vercel Configuration
# ============================================
VERCEL_URL=https://your-app.vercel.app
