# OpenRouter API Configuration - REQUIRED
# Get your free API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# GitHub Configuration - REQUIRED for memory storage
# Generate token at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# Email Configuration - REQUIRED for notifications
EMERGENCY_EMAIL=your-emergency-email@gmail.com
GMAIL_SENDER_EMAIL=your-sender-email@gmail.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false

# Optional: Default AI Model
DEFAULT_MODEL=mistralai/mistral-7b-instruct:free

# Upstash Redis Configuration (Optional - for advanced features)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here
